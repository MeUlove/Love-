#include<iostream>
#include<cstring>
#include<cstdio>
#include<cmath>
#include<algorithm>
using namespace std;
int n,m;
int s[5000010];
int lowbit(int x)
{
    return x&(-x);
}
void add(int x,int y)
{
    while(x<=n)
    {
        s[x]+=y;
        x+=lowbit(x);
    }
}
int sum(int x)
{
    int ans=0;
    while(x>0)
    {
        ans+=s[x];
        x-=lowbit(x);
    }
    return ans;
}
int main()
{
    scanf("%d %d",&n,&m);
    for(int i=1;i<=n;i++)
    {
        int x;
        scanf("%d",&x);
        add(i,x);
    }
    for(int i=1;i<=m;i++)
    {
        int x,y,z;
        scanf("%d %d %d",&z,&x,&y);
        if(z==1)
        {
            add(x,y);
        }
        else if(z==2)
        {
            printf("%d\n",sum(y)-sum(x-1));
        }
    }
    return 0;
}
